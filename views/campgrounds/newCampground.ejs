<%- include("../partials/header") %>

<h1 style="text-align: center">Add a new Campground!</h1>

<form
  class="form-horizontal"
  action="/campgrounds"
  method="POST"
  style="width: 30%; margin: 10px auto; text-align: center"
>
  <div class="form-group">
    <label for="text" class="col-sm-2 control-label" style="display: inline"
      >Campsite Name</label
    >
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="text"
        name="name"
        placeholder="Campsite"
      />
    </div>
  </div>
  <div class="form-group">
    <label for="url" class="col-sm-2 control-label" style="display: inline"
      >Image URL</label
    >
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="url"
        name="image"
        placeholder="Enter URL"
      />
    </div>
  </div>

  <div class="form-group">
    <label for="text" class="col-sm-2 control-label" style="display: inline"
      >Enter Price</label
    >
    <div class="col-sm-10">
      <input
        type="number"
        class="form-control"
        id="text"
        name="Price"
        placeholder="Enter Price"
        min="0.1"
        step="0.1"
      />
    </div>
  </div>

  <div class="form-group">
    <label for="text" class="col-sm-2 control-label" style="display: inline"
      >Describe Campsite</label
    >
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="text"
        name="description"
        placeholder="Write something.."
      />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary btn-lg" style="width: 100%">
        Submit
      </button>
    </div>
  </div>
  <a href="/campgrounds">Go Back</a>
</form>

<%- include("../partials/footer") %>
